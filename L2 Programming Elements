print("2.4 Обчислити площу і периметр прямокутника за заданими шириною і висотою.")
height=int(input("input the Height= "))
width=int(input("input the Width= "))
print("Rectangle Area= ",(height + width)*2)
print("Rectangle Perimeter= ",height * width)

      
print(" 2.5 Обчислити площу і периметр кола по заданому радіусу.")
import math
pi=math.pi
print ("pi= ", pi)

r=int(input("input the radius= "))
print("Circle Perimeter= ", 2*pi*r)
print("Circle Area= ", pi*r**2)
print()
print("2.6 По двом введеним користувачем катетам прямокутного трикутника обчислити довжину гіпотенузи.")
import math
k1=int(input("katet1= "))
k2=int(input("katet2= "))
print("gipotenuse= ", math.sqrt(k1**2 + k2**2))
